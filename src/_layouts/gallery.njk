---
layout: default
---
<h1 style="text-align:center">{{ title }}</h1>

<div class="lead-wrap"><div class="lead">{{ content | safe }}</div></div>

{% set images = slug | galleryImages %}
{% set meta = slug | imageMeta %}
<div class="gallery">
  {% for src in images %}
    {% set file = src | basename %}
    {% set m = meta[file] %}
    <div class="card">
      <button class="zoom"
              data-src="{{ src }}"
              data-idx="{{ loop.index0 }}"
              data-title="{{ (m and m.title) or '' }}"
              data-sub="{{ (m and m.subtitle) or '' }}">
        <img src="{{ src }}" alt="{{ (m and m.title) or (title ~ ' image ' ~ loop.index) }}">
        <div class="overlay">
          <div>
            {% if m and m.title %}<h3>{{ m.title }}</h3>{% endif %}
            {% if m and m.subtitle %}<p>{{ m.subtitle }}</p>{% endif %}
          </div>
        </div>
      </button>
    </div>
  {% endfor %}
</div>
